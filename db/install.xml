        <FIELD NAME="published"           TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"    />
        <FIELD NAME="created_by"          TYPE="int" LENGTH="10" NOTNULL="true"                />
        <FIELD NAME="version"             TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="1"    />
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <!-- Section 2 -->
    <TABLE NAME="tad_section_2" COMMENT="2nd section of a TAD">
      <FIELDS>
        <FIELD NAME="id"                  TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="rules"               TYPE="text" NOTNULL="true"                          />
        <FIELD NAME="rules_en"             TYPE="text" NOTNULL="true"                       />
        <FIELD NAME="assesment_methods_hu" TYPE="text" NOTNULL="true"                       />
        <FIELD NAME="assesment_methods_en" TYPE="text" NOTNULL="true"                       />
        <!-- JSON object {"types": [{"hu": [{"exam1": "percent1"}, {"exam1": "percent2"}], "en": [{"exam1": "optional"}, {"exam1": "optional"}]}]"} -->
        <FIELD NAME="midterm_proportions" TYPE="text" NOTNULL="true"                          />
        <!-- JSON object {"types": [{"hu": [{"exam1": "percent1"}, {"exam1": "percent2"}], "en": [{"exam1": "optional"}, {"exam1": "optional"}]}]"} -->
        <FIELD NAME="exam_proportions"    TYPE="text" NOTNULL="true"                          />
        <FIELD NAME="excellent"           TYPE="int" LENGTH="3" NOTNULL="true"                />
        <FIELD NAME="very_good"           TYPE="int" LENGTH="3" NOTNULL="true"                />
        <FIELD NAME="good"                TYPE="int" LENGTH="3" NOTNULL="true"                />
        <FIELD NAME="satisfactory"        TYPE="int" LENGTH="3" NOTNULL="true"                />
        <FIELD NAME="pass"                TYPE="int" LENGTH="3" NOTNULL="true"                />
        <FIELD NAME="fail"                TYPE="int" LENGTH="3" NOTNULL="true"                />
        <FIELD NAME="retake"              TYPE="text" NOTNULL="true"                          />
        <FIELD NAME="retake_en"           TYPE="text" NOTNULL="true"                          />
        <FIELD NAME="signature"           TYPE="text" NOTNULL="true"                          />
        <FIELD NAME="signature_en"        TYPE="text" NOTNULL="true"                          />
        <!-- JSON object {"activities":[{"activity": {"hu": "hu", "en": "optional", "hours": numberofhours}}, ...} -->
        <FIELD NAME="workhours_activity"  TYPE="text" NOTNULL="true"                          />
        <FIELD NAME="validity"            TYPE="int" LENGTH="10" NOTNULL="true"               />
        <FIELD NAME="validity_en"         TYPE="int" LENGTH="10" NOTNULL="true"               />
        <FIELD NAME="validby"             TYPE="int" LENGTH="10" NOTNULL="true"               />
        <FIELD NAME="validuntil"          TYPE="int" LENGTH="10" NOTNULL="true"               />
        <FIELD NAME="locked"              TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"   />
