<head>
    <style>
        .list-header .tad-wrapper{
            font-size: 1rem;
        }
    </style>
</head>
<div class="container-xxl">
    <div id="filter-container" class="row justify-content-md-center justify-content-xl-start">
        <div id="filter-wrapper" class="col-xl-3 col-md-6 mb-3">
            <label for="filter">{{filter_label}}</label>
            <input id="filter" name=filter class="form-control" type="text" style="width: 33%;" onKeyUp="filter()">
        </div>
    </div>

    <div id="semester-container" class="row justify-content-md-center justify-content-xl-start">
        <div id="semester-select" class="col-xl-3 col-md-6 mb-6">
            <label for="semester">{{semester_label}}</label><br>
            <select id="semester" name="semester" class="custom-select" style="width: 33%;" onChange="filter('semester')">
                <option value=0>{{semester_select_default}}</option>
                {{#semester_options}}
                    <option value={{{.}}}>{{{.}}}</option>
                {{/semester_options}}        
            </select>
        </div>
    </div>
</div>
<p id="noresult" style="display: none">{{label_noresult}}</p>

<div class="tad-wrapper">
    <div class="list-header-container" style="display: flex; justify-content: space-between;">
        <h3 class="list-header">{{corriculum_code_heading}}  </h3>
        <h3 class="list-header">{{corriculum_name_heading}}  </h3>
        <h3 class="list-header">{{author_heading}}           </h3>
        <h3 class="list-header">{{course_code_heading}}      </h3>
        <h3 class="list-header">{{semester_heading}}         </h3>
        <h3 class="list-header">{{entity_heading}}           </h3>
        <h3 class="list-header">{{course_name_heading}}      </h3>
        <h3 class="list-header">{{file_heading}}             </h3>
    </div>
    <div class="list-pancake" style="display: grid; grid-template-rows: 8;">
        <div class="pancake-section1">
            {{corriculum_code}}
        </div>
        <div class="pancake-section2">
            {{corriculum_name}}
        </div>
        <div class="pancake-section3">
            {{author}}
        </div>
        <div class="pancake-section4">
            {{coursename}}
        </div>
        <div class="pancake-section5">
            {{semester}}
        </div>
        <div class="pancake-section6">
            {{entity}}
        </div>
        <div class="pancake-section7">
            {{fullname}}
        </div>
        <div class="pancake-section7">
            <a href="{{url}}" target="_blank">Letöltés</a>
        </div>
    </div>
</div>

