{{!
    @template local_banner/manage

    Template to display the list of forum discussions.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * TODO

    Example context (json):
    {
    }
}}
<div class="container-fluid" style="margin: auto; padding: auto;">
    <div id="filter-container" class="container-fluid justify-content-md-center justify-content-xl-start">
        <div id="filter-wrapper" class="col-xl-3 col-md-6 mb-3">
            <label for="filter">{{filter_label}}</label>
            <input id="filter" name=filter class="form-control" type="text" style="width: 33%;" onKeyUp="filter()">
        </div>
        <p id="noresult" style="display: none">{{label_noresult}}</p>
        <div class="nav-container" style="align-items: baseline;">
            <nav class="nav">
                <span class="nav-element" font->{{semester_heading}}</span>
                <a class="nav-link active nav-element" target="" href="{{{url}}}">{{semester_select_default}}</a>
                {{#semesterurls}}
                <a class="nav-link active nav-element" target="" href="{{{url}}}">{{displaystr}}</a>
                {{/semesterurls}} 
            </nav>
        </div>
    </div>
    <div id="table-container container-fluid">
        <table style="width: 100%" class="table" id="filter-table"></table>
    <table style="width: 100%" class="table table-striped table-hover table-responsive" id="tad-table">
        <thead class="thead-light">
            <tr>
            <th scope="col" class="th">{{corriculum_code_heading}}</th>
            <th scope="col" class="th">{{corriculum_name_heading}}</th>
            <th scope="col" class="th">{{author_heading}}</th>
            <th scope="col" class="th">{{course_code_heading}}</th>
            <th scope="col" class="th">{{semester_heading}}</th>
            <th scope="col" class="th">{{department_heading}}</th>
            <th scope="col" class="th">{{course_name_heading}}</th>
            <th scope="col" class="th">{{file_heading}}</th>
        </thead>
        </tr>
    {{#rows}}
    <tr class="tr" style="width: auto;">
        <td style="word-wrap: break-word;" class="tad-column">
            {{corriculum_code}}
        </td>
        <td style="word-wrap: break-word;" class="tad-column">
            {{corriculum_name}}
        </td>
        <td style="word-wrap: break-word;" class="tad-column">
            {{author}}
        </td>
        <td style="word-wrap: break-word;" class="tad-column">
            {{coursename}}
        </td>
        <td style="word-wrap: break-word;" class="tad-column">
            {{semester}}
        </td>
        <td style="word-wrap: break-word;" class="tad-column">
            {{department}}
        </td>
        <td style="word-wrap: break-word;" class="tad-column">
            {{fullname}}
        </td>
        <td style="word-wrap: break-word;" class="tad-column">
            <a href="{{url}}" target="_blank">Letöltés</a>
        </td>
    </tr>
    {{/rows}}
</table>
</div>
<div id="pagination-container">
    <div class="row  justify-content-md-center" id="pagination-row">
        <div class="btn-toolbar" id="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups"></div>
    </div>
</div>
