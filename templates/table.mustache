{{!
    @template local_banner/manage

    Template to display the list of forum discussions.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * TODO

    Example context (json):
    {
    }
}}
<div class="container-xxl">
    <div id="filter-container" class="row justify-content-md-center justify-content-xl-start">
        <div id="filter-wrapper" class="col-xl-3 col-md-6 mb-3">
            <label for="filter">{{filter_label}}</label>
            <input id="filter" name=filter class="form-control" type="text" onKeyUp="filter()">
        </div>
    </div>

    <div id="semester-container" class="row justify-content-md-center justify-content-xl-start">
        <div id="semester-select" class="col-xl-3 col-md-6 mb-6">
            <label for="semester">{{semester_label}}</label><br>
            <select id="semester" name="semester" class="custom-select" style="width: 100%;" onChange="filter('semester')">
                {{#semester_options}}
                    <option value={{{.}}}>{{{.}}}</option>
                {{/semester_options}}        
            </select>
        </div>
    </div>

</div>
<p id="noresult" style="display: none">{{label_noresult}}</p>
<div id="table-container">
<table style="width: 100%" class="table" id="filter-table"></table>
<table style="width: 100%" class="table" id="tad-table">
  <tr>
    <th scope="col" class="th">{{corriculum_code_heading}}</th>
    <th scope="col" class="th">{{corriculum_name_heading}}</th>
    <th scope="col" class="th">{{author_heading}}</th>
    <th scope="col" class="th">{{course_code_heading}}</th>
    <th scope="col" class="th">{{semester_heading}}</th>
    <th scope="col" class="th">{{entity_heading}}</th>
    <th scope="col" class="th">{{course_name_heading}}</th>
    <th scope="col" class="th">{{file_heading}}</th>
  </tr>
{{#rows}}
<tr class="tr">
    <td>
        {{corriculum_code}}
    </td>
    <td>
        {{corriculum_name}}
    </td>
    <td>
        {{author}}
    </td>
    <td>
        {{coursename}}
    </td>
    <td>
        {{semester}}
    </td>
    <td>
        {{entity}}
    </td>
    <td>
        {{fullname}}
    </td>
    <td>
        <a href="{{url}}" target="_blank">Letöltés</a>
    </td>
</tr>
{{/rows}}
</table>
</div>
<div id="pagination-container">
    <div class="row  justify-content-md-center" id="pagination-row">
        <div class="btn-toolbar" id="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups"></div>
    </div>
</div>
