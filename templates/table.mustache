{{!
    @template local_banner/manage

    Template to display the list of forum discussions.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * TODO

    Example context (json):
    {
    }
}}
<div id="filter-container" class="row">
    <strong for="filter" class="col-sm-1 mb-3">Search</strong>
    <input id="filter" name=filter class="form-control col-sm-3 mb-3"  onKeyUp="filter()">
</div>
<p id="noresult" style="display: none">{{label_noresult}}</p>
<div id="table-container">
<table style="width: 100%" class="table" id="filter-table"></table>
<table style="width: 100%" class="table" id="tad-table">
  <tr>
    <th scope="col" class="th">{{id_heading}}</th>
    <th scope="col" class="th">{{author_heading}}</th>
    <th scope="col" class="th">{{course_code_heading}}</th>
    <th scope="col" class="th">{{semester_heading}}</th>
    <th scope="col" class="th">{{entity_heading}}</th>
    <th scope="col" class="th">{{course_name_heading}}</th>
    <th scope="col" class="th">{{time_created_heading}}</th>
    <th scope="col" class="th">{{file_heading}}</th>
  </tr>
{{#rows}}
<tr class="tr">
    <td>
        {{id}}
    </td>
    <td>
        {{author}}
    </td>
    <td>
        {{coursename}}
    </td>
    <td>
        {{semester}}
    </td>
    <td>
        {{fullname}}
    </td>
    <td>
        {{entity}}
    </td>
    <td>
        {{timecreated}}
    </td>
    <td>
        <a href="{{url}}" target="_blank">Letöltés</a>
    </td>
</tr>
{{/rows}}
</table>
</div>
<div id="pagination-container">
    <div class="row  justify-content-md-center" id="pagination-row">
        <div class="btn-toolbar" id="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups"></div>
    </div>
</div>
